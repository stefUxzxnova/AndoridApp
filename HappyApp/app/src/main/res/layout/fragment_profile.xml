<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name: "
        android:layout_marginBottom="8dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textViewLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name: "
        android:layout_below="@+id/textViewFirstName"
        android:layout_marginBottom="8dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:layout_below="@+id/textViewLastName"
        android:layout_marginBottom="8dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textViewCreatedOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created On: "
        android:layout_below="@+id/textViewUsername"
        android:layout_marginBottom="8dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/textViewCreatedOn">

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_marginTop="16dp"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Delete" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewGetLoggedUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutButtons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@android:color/holo_blue_dark" />

</RelativeLayout>
